    box-shadow: none;
    padding: 0px;
    z-index: 3;
}

.photoAlbumEntry a.video-fancybox img,
.photoAlbumEntry a.animation-fancybox img
{
    margin-top: -29px;
    max-height: 128px;
}

.photoAlbumEntry a.cloudvideo img {
    position: relative;
    z-index: -1;
    margin-top: 0;
}

.photoAlbumEntryPreview,
.photoAlbumEntryPreview a,
.photoAlbumEntryPreview .photoAlbumEntryTitle {
    height: auto;
    width: auto;
    background-image: none;
    margin: 0.5em  0 2em 0;
}

.photoAlbumEntryDescription {
    display:none;
}

/* bigger title for products section */
.section-products .photoAlbumEntryTitle {
    font-size:160%;
}
/* @end Album view classes */

