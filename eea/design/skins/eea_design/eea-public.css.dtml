}

.photoAlbumEntryWrapper {
    display: block;
    background: white;
    max-height: 71px;
    height: 100%;
    width: 128px;
    margin-bottom: 0px;
    overflow: hidden;
    border: 0;
}

a.cloudvideo .photoAlbumEntryWrapper {
    position: relative;
    background: url(&dtml-portal_url;/play-button-cloud.png) no-repeat 2px center;
}
.photoAlbumEntry a {
    font-size: &dtml-fontSmallSize;;
