<div id="cross-site-top">
   <div metal:use-macro="here/global_externalsites/macros/external_sites">
       Eionet, EW ..
   </div>
    
<ul id="portal-siteactions"
    tal:define="accesskeys python: {'sitemap' : '3', 'accessibility' : '0', 'contact' : '9'};
                portal_url context/@@plone_portal_state/portal_url;
                putils context/plone_utils;
                context_state    context/@@plone_context_state;
                site_actions python: context_state.actions('site_actions');
                getIconFor nocall:putils/getIconFor;"
    tal:condition="site_actions"
    i18n:domain="eea">

    <li tal:repeat="saction site_actions"
        tal:attributes="id string:siteaction-${saction/id}"><a
           href=""
           tal:define="title saction/title;
                       id saction/id;

                       icon python:getIconFor('site_actions', saction['id'], None);
                       accesskey python: accesskeys.get(id, '');"
           tal:attributes="href saction/url;
                           title title;
                           accesskey accesskey;">

                           <img i18n:attributes="title" src="" alt="" title=""
                                     tal:attributes="src    string:$icon;
                                     id     string:icon-${saction/id};
                                     title  title;
                                     alt    title;"
                     tal:condition="icon"/>
       <tal:title tal:content="title"> Site action</tal:title></a></li>
</ul>

   <div metal:use-macro="here/cross_site_panels/macros/main">
       dropdown for ETCs ..
   </div>

   <div class="visualClear"><!-- &nbsp; --></div>
</div>
